@model CodeSourceSolution.Models.ViewModels.PlayerVM

@{
    ViewData["Title"] = "Delete";
}

<h1 class="d-flex justify-content-center" style="color:crimson">Are you sure you want to delete this @Html.DisplayFor(model => model.PlayerName)?</h1>
<div class="row">
    <div class="col-4 d-flex justify-content-center">
        <img src="@Model.Picture"  width="500" style="border-radius: 50%; border: 2px solid #ccc;" />
    </div>
    <div class="col-8 mt-5">
        <dl class="sweet-table">
            <div class="sweet-row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PlayerName)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.PlayerName)
                </dd>
            </div>
            <div class="sweet-row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.MaritalStatus)
                </dt>
                <dd class="col-sm-6">
                    @{
                        var genderText = (Model.MaritalStatus == true) ? "Married" : (Model.MaritalStatus == false) ? "Unmarried" : "";
                    }
                    @genderText
                </dd>
            </div>
            <div class="sweet-row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.DateOfBirth)
                </dd>
            </div>
            <div class="sweet-row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
            </div>
           
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PlayerId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-info" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
