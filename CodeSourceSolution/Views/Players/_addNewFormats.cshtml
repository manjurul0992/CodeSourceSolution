@model CodeSourceSolution.Models.Format
<div class="row">
    <div class="col d-flex justify-content-between align-items-center mt-2">
        @Html.DropDownListFor(x => x.FormatId, ViewBag.format as SelectList, "----SELECT----",
                 new { @class = "form-select flex-grow-1 form-control", required = "required" })

        <a id="DeleteFormat" class="btn btn-danger ml-2 ">Remove</a>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
