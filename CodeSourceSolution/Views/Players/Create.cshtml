@model CodeSourceSolution.Models.ViewModels.PlayerVM
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Add Player</h1>
<div class="container">
    <form asp-action="Create" asp-controller="Players" method="post" enctype="multipart/form-data">
        
        <div class="row">
            <div class="col-6 mt-2">
                <!-- ... -->
                <div class="form-group">
                    <label asp-for="PlayerName" class="custom-label"></label>
                    <input asp-for="PlayerName" type="text" class="form-control" id="PlayerName"/>
                    <span asp-validation-for="PlayerName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="DateOfBirth">Date of Birth</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" id="DateOfBirth" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="phone">phone</label>
                    <input asp-for="Phone" class="form-control" id="Phone" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label for="PicturePath">Picture Path</label>
                    <input asp-for="PicturePath" class="form-control" id="PicturePath" required />
                    <span asp-validation-for="PicturePath" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label for="MaritalStatus">Marital Status</label>
                    <input asp-for="MaritalStatus" type="checkbox" id="MaritalStatus" />
                    <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                </div>


                
            </div>
            <div class="col-6">
                <a id="btnAdd" class="d-flex justify-content-end"><b class="btn btn-outline-warning fa fa-plus"></b></a>


               
                    <div id="FormatContainer">
                        <script>
                            LoadData();
                        </script>
                    </div>
                

               
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
        </div>

        
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}